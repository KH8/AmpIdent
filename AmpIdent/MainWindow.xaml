<Window x:Class="AmpIdent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf" 
        Title="MainWindow" Height="246" Width="593" ResizeMode="NoResize">
    <Grid>
        <oxy:Plot Model="{Binding Model}" Margin="10,66,10,10" BorderBrush="Black" Background="White" BorderThickness="1"/>
        <Button Content="Load" HorizontalAlignment="Left" Margin="291,10,0,0" VerticalAlignment="Top" Width="75" Click="Load"/>
        <TextBox Name="PathBox" HorizontalAlignment="Left" Height="22" Margin="83,10,0,0" TextWrapping="Wrap" Text="Type file path here" VerticalAlignment="Top" Width="203" TextChanged="PathBox_TextChanged_1"/>
        <Label Content="WAV path:" HorizontalAlignment="Left" Height="26" Margin="6,9,0,0" VerticalAlignment="Top" Width="76"/>
        <Label Name="Loading" Content="..." HorizontalAlignment="Left" VerticalAlignment="Top" Margin="499,10,0,0" Width="83"/>
        <Button Content="Load" HorizontalAlignment="Left" Margin="291,10,0,0" VerticalAlignment="Top" Width="75" Click="Load"/>
        <Button Content="Play" HorizontalAlignment="Left" Margin="371,10,0,0" VerticalAlignment="Top" Width="75" Click="Play"/>
        <CheckBox Name="Graph" Content="Graph only" HorizontalAlignment="Left" Margin="499,41,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
